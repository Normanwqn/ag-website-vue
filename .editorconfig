root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space

[*.html]
indent_size = 2
[*.yml]
indent_size = 2
[*.vue]
indent_size = 2

[*.ts]
indent_size = 4
[*.scss]
indent_size = 4
[*.json]
indent_size = 4
[*.js]
indent_size = 4
[package.json]
indent_size = 2
